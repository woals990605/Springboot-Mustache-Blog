{{> /layout/header}}

<!-- 컨테이너 시작 -->
<div class="container mt-3">
    <!-- container, mt-3은 css 클래스임!! -->

    <!-- 글 상세정보보기 시작 -->

    <div class="mb-3 mt-3">
        작성자 : {{post.user.username}}
        <!--실제로는 request영역에서 가져오는 것-->
    </div>
    <div class="mb-3 mt-3">
        {{post.title}}
        <!--실제로는 request영역에서 가져오는 것-->
    </div>
    <div class="mb-3">
        {{post.content}}
    </div>

    <!-- a태그여도 버튼처럼 생겨있다, btn btn-dark 클래스를 걸어줘서! -->
    <a href="/s/post/{{post.id}}/updateForm" class="btn btn-dark">수정 페이지이동</a>

    <!-- 글 상세정보보기 끝 -->

</div>
<!-- 컨테이너 끝 -->

{{> /layout/footer}}